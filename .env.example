# =============================================================================
# PROJECT MANAGEMENT SOFTWARE (PMS) - ENVIRONMENT CONFIGURATION
# =============================================================================

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NODE_ENV=development
APP_NAME=PMS
APP_VERSION=1.0.0

# =============================================================================
# BACKEND CONFIGURATION
# =============================================================================
BACKEND_PORT=3001
BACKEND_HOST=0.0.0.0
API_PREFIX=api
API_VERSION=v1

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
FRONTEND_PORT=3000
NEXT_PUBLIC_API_URL=http://localhost:3001/api/v1
NEXT_PUBLIC_APP_URL=http://localhost:3000

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# MongoDB Configuration
MONGODB_URI=mongodb://mongodb:27017/pms_development
MONGODB_HOST=mongodb
MONGODB_PORT=27017
MONGODB_DATABASE=pms_development
MONGODB_USERNAME=
MONGODB_PASSWORD=

# Database Options
MONGODB_MAX_POOL_SIZE=10
MONGODB_MIN_POOL_SIZE=5
MONGODB_MAX_IDLE_TIME_MS=30000
MONGODB_SERVER_SELECTION_TIMEOUT_MS=5000

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ACCESS_TOKEN_EXPIRATION=15m
JWT_REFRESH_TOKEN_EXPIRATION=7d
JWT_ISSUER=pms-backend
JWT_AUDIENCE=pms-frontend

# Password Hashing
BCRYPT_SALT_ROUNDS=12

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-change-in-production
SESSION_MAX_AGE=86400000

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# =============================================================================
# FILE STORAGE CONFIGURATION
# =============================================================================
# MinIO Configuration (S3-compatible)
MINIO_ENDPOINT=minio
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_USE_SSL=false
MINIO_BUCKET_NAME=pms-files

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,xls,xlsx,ppt,pptx,txt,csv

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=debug
LOG_FORMAT=json
LOG_FILE_ENABLED=true
LOG_FILE_PATH=./logs/app.log
LOG_FILE_MAX_SIZE=10m
LOG_FILE_MAX_FILES=5

# =============================================================================
# REDIS CONFIGURATION (for caching and sessions)
# =============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL=3600

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@pms.com

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# Virus Scanning (ClamAV)
CLAMAV_HOST=clamav
CLAMAV_PORT=3310

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================
# API Documentation
SWAGGER_ENABLED=true
SWAGGER_PATH=api/docs
SWAGGER_TITLE=PMS API Documentation
SWAGGER_DESCRIPTION=Project Management Software API
SWAGGER_VERSION=1.0.0

# Development Features
HOT_RELOAD=true
DEBUG_MODE=true
MOCK_EXTERNAL_SERVICES=true

# =============================================================================
# MONITORING & HEALTH CHECKS
# =============================================================================
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/health
METRICS_ENABLED=true
METRICS_PATH=/metrics

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================
# Test Database
TEST_MONGODB_URI=mongodb://mongodb:27017/pms_test
TEST_MONGODB_DATABASE=pms_test

# Test Configuration
TEST_JWT_SECRET=test-jwt-secret
TEST_TIMEOUT=30000

# =============================================================================
# PRODUCTION OVERRIDES (uncomment for production)
# =============================================================================
# NODE_ENV=production
# LOG_LEVEL=info
# DEBUG_MODE=false
# SWAGGER_ENABLED=false
# MOCK_EXTERNAL_SERVICES=false
# JWT_SECRET=your-production-jwt-secret-very-long-and-secure
# SESSION_SECRET=your-production-session-secret-very-long-and-secure
# MONGODB_URI=mongodb://your-production-mongodb-cluster
# MINIO_ENDPOINT=your-production-s3-endpoint
# CORS_ORIGIN=https://your-production-domain.com
